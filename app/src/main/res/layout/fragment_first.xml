<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:layout_marginHorizontal="38dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/gilroy"
        android:text="Forgot password "
        android:textColor="@color/black"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="335dp"
        android:layout_height="55dp"
        android:fontFamily="@font/gilroyr"
        android:layout_above="@+id/number_heading"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:text="Please enter your phone number to change your password"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/number_heading"
        android:layout_width="96dp"
        android:layout_height="17dp"
        android:fontFamily="@font/gilroyr"
        android:layout_above="@+id/plain_text_input"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:text="Phone Number"
        android:textColor="@color/black" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/plain_text_input"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:boxStrokeColor="#FFF"
        app:boxBackgroundColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="305dp"
        android:layout_above="@+id/continue_button"
        android:background="@drawable/edit_text_border"
        app:startIconDrawable="@drawable/phone"
        app:startIconTint="@color/blue"
        android:fontFamily="@font/gilroyr"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"

            android:padding="0dp"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/continue_button"
        android:layout_width="335dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67dp"
        android:background="@drawable/edit_button_border"
        android:text="Continue"
        android:fontFamily="@font/gilroyr"
        app:backgroundTint="@color/blue" />


</RelativeLayout>